# OpenPerturbation Environment Configuration
# Copy this file to .env and populate with your actual values
# NEVER commit .env files to version control

# OpenAI API Configuration
# Required for AI-powered analysis agents
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Database Configuration (if using external database)
# DATABASE_URL=postgresql://user:password@localhost:5432/openperturbation
# REDIS_URL=redis://localhost:6379/0

# API Server Configuration
# API_HOST=0.0.0.0
# API_PORT=8000
# API_WORKERS=4
# LOG_LEVEL=INFO

# External Service APIs
# WANDB_API_KEY=your-wandb-api-key-here
# HUGGINGFACE_TOKEN=your-hf-token-here

# Security Keys (generate with: openssl rand -hex 32)
# SECRET_KEY=your-secret-key-for-jwt-signing
# ENCRYPTION_KEY=your-encryption-key-for-sensitive-data

# Development/Debug Settings
# DEBUG=false
# ENABLE_PROFILING=false
# MOCK_EXTERNAL_APIS=false

# Cloud Storage (if using cloud providers)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_DEFAULT_REGION=us-west-2
# S3_BUCKET_NAME=your-s3-bucket

# Monitoring and Observability
# SENTRY_DSN=your-sentry-dsn-here
# DATADOG_API_KEY=your-datadog-api-key
